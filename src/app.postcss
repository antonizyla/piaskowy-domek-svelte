/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
	padding: 0;
	margin: 0;
	font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.max-content {
	max-width: 1600px;
}

a {
	color: black;
	font-weight: 500;
}

.form-warning {
    @apply text-red-400 text-sm text-center p-1
}

.invalid-field {
    @apply border-red-400
}
